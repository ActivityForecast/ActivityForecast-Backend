# ActivityForecast Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=activity_forecast
MYSQL_USER=activityuser
MYSQL_PASSWORD=your_secure_user_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long

# External API Keys
WEATHER_API_KEY=your_openweathermap_api_key
AIR_QUALITY_API_KEY=your_airvisual_api_key

# Social Login (Kakao)
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# Redis Configuration
REDIS_PASSWORD=your_redis_password

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Docker Hub Configuration (for CI/CD)
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password

# Oracle Cloud Instance Configuration
ORACLE_HOST=your_oracle_instance_ip
ORACLE_USER=ubuntu
ORACLE_PORT=22
# ORACLE_SSH_KEY should be set as GitHub Secret (private key content)